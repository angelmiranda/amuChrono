<Window x:Class="amuNewCrono.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="My Crono. By Angel M. U." Height="250" Width="400" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="textCronoValue" Text="{Binding Path=timeCronoValOut, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="135" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="374" FontSize="72" FontFamily="Consolas" TextAlignment="Center"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="112" Height="60" Click="BtnStart_Click" Background="#FFABD9FF" FontFamily="Lucida Sans" FontSize="22"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="142,150,0,0" VerticalAlignment="Top" Width="112"  Height="60" Click="BtnStop_Click" Background="#FFABD9FF" FontFamily="Lucida Sans" FontSize="22"/>
        <Button x:Name="btnPause" Content="Pause" HorizontalAlignment="Left" Margin="272,150,0,0" VerticalAlignment="Top" Width="112"  Height="60"  Click="BtnPause_Click" Background="#FFABD9FF" FontFamily="Lucida Sans" FontSize="22" />

    </Grid>
</Window>
